@model Chat.ViewModels.RegisterViewModel
<h2>New User Registration</h2>
</br>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-horizontal">

        <div class="form-group row">
            <label asp-for="Nickname" class="control-label col-md-2"></label>
            <div class="col-md-4">
                <input asp-for="Nickname" class="form-control" />
                <span asp-validation-for="Nickname" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Password" class="control-label col-md-2"></label>
            <div class="col-md-4">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="PasswordConfirm" class="control-label col-md-2"></label>
            <div class="col-md-4">
                <input asp-for="PasswordConfirm" class="form-control" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="edit-btn-group">
                <input type="submit" value="Registration" class="btn btn-success" />
                <a href="/Home/Index" class="btn btn-primary">Back</a>
            </div>
        </div>
    </div>
</form>